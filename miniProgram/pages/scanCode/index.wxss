/* pages/scanCode/index.wxss */
.container{
  position: relative;
}

.container::before{
  display: table;
  content: '';
}

.title{
  text-align: center;
  font-weight: bold;
  margin-top: 50rpx;
}

.form-wrap{
  margin-top: 50rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.form-item{
  display: flex;
  margin-bottom: 18rpx;
  position: relative;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}

.lable{
  margin-right: 20rpx;
  display: inline-block;
  width: 200rpx;
  font-size: 36rpx;
}

.form-item input{
  font-size: 36rpx;
}

.sm-btn{
  position: absolute;
  font-size: 32rpx;
  top: 50%;
  right: 50rpx;
  transform: translateY(-50%);
  color: #409eff;
  z-index: 9;
}

picker{
  display: inline-block;
  width: 100%;
  height: 100%;
}

.picker{
  display: inline-block;
  width: 100%;
  height: 100%;
  padding-left: 50rpx;
  box-sizing: border-box;
  font-size: 36rpx;
}

.modal-wrap{
  position: absolute;
  width: 100vw;
  height: 100vh;
  top: 0;
  left: 0;
  z-index: 99;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content{
  position: absolute;
  width: 60%;
  top: 30%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
  z-index: 199;
  border-radius: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
}

.modal-title{
  font-size: 32rpx;
  text-align: center;
  font-weight: 500;
  margin-bottom: 15rpx;
}

.img-code-input{
  font-size: 30rpx;
  padding: 5rpx 10rpx;
  border-bottom: 1px solid #ccc;
}

.img-wrap{
  margin-top: 20rpx;
}

.img-code{
  width: 60%;
  vertical-align: middle;
}

.refresh-btn{
  display: inline-block;
  width: 38%;
  margin-left: 2%;
  font-size: 24rpx;
  color: #409eff;
}

.btns-wrap{
  display: flex;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 30rpx;
}

.modal-btn{
  display: inline-block;
  width: 50%;
  font-size: 34rpx;
  color: #409eff;
  text-align: center;
}

.start-btn{
  color: #fff;
  background-color: #409eff;
  border-color: #409eff;
  white-space: nowrap;
  cursor: pointer;
  border: 1px solid #dcdfe6;
  -webkit-appearance: none;
  text-align: center;
  box-sizing: border-box;
  outline: none;
  margin: 0;
  transition: .1s;
  font-weight: 500;
  -moz-user-select: none;
  -webkit-user-select: none;
  -ms-user-select: none;
  padding: 12px 20px;
  font-size: 14px;
  border-radius: 4px;
  width: 90%;
  position: fixed;
  bottom: 50rpx;
  left: 50%;
  transform: translateX(-50%);
}